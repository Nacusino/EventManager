@model IEnumerable<MVCApp.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Мероприятия</h1>

<p>
    <a asp-action="Create">Создать новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewAfterEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeAfterEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Host)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Space)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewAfterEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeAfterEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Application.ApplicationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Host.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Space.SpaceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.EventId">Подробности</a> |
                <a asp-action="Delete" asp-route-id="@item.EventId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
